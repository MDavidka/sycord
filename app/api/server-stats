// pages/api/server-stats.ts
import { NextApiRequest, NextApiResponse } from 'next';
import { connectToDatabase } from '@/lib/mongodb';

export default async function handler(req: NextApiRequest, res: NextApiResponse) {
  if (req.method !== 'GET') {
    return res.status(405).json({ message: 'Method not allowed' });
  }

  try {
    const { db } = await connectToDatabase();
    
    // Fetch server stats from desh-bot -> servers collection
    const servers = await db.collection('servers').find({}).toArray();
    
    // Transform data to match our interface
    const serverStats = servers.map(server => ({
      serverId: server._id,
      serverName: server.name || 'Unknown Server',
      load: server.load || 0,
      lastUpdated: server.updatedAt || new Date().toISOString(),
      memberCount: server.memberCount || 0,
      isOnline: server.status === 'online'
    }));

    res.status(200).json({ servers: serverStats });
  } catch (error) {
    console.error('Error fetching server stats:', error);
    res.status(500).json({ message: 'Internal server error' });
  }
}